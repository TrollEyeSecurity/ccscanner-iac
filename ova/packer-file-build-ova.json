{
  "variables": {
    "ccscanner_name": "ccscanner-{{ timestamp }}",
    "http_server": "{{env `HTTP_SERVER`}}",
    "http_port": "{{env `HTTP_PORT`}}"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "iso_url": "https://releases.ubuntu.com/22.04/ubuntu-22.04.1-live-server-amd64.iso",
      "iso_checksum": "sha256:10f19c5b2b8d6db711582e0e27f5116296c34fe4b313ba45f9b201a5007056cb",
      "boot_wait": "5s",
      "boot_command": [
        "<esc><esc><esc>",
        "<enter><wait>",
        "/casper/vmlinuz ",
        "root=/dev/sr0 ",
        "initrd=/casper/initrd ",
        "autoinstall ",
        "ds=nocloud-net;s=http://_gateway:{{user `http_port` }}/",
        "<enter><wait>"
      ],
      "shutdown_command": "sudo poweroff",
      "ssh_username": "ubuntu",
      "ssh_password": "Youshou1dch@ng3measap",
      "ssh_pty": true,
      "ssh_timeout": "30m",
      "ssh_handshake_attempts": "85",
      "guest_os_type": "ubuntu64Guest",
      "vm_name": "{{user `ccscanner_name`}}",
      "cpus": 4,
      "memory": 4096,
      "disk_size": 81920,
      "format": "ova"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "configs/sudoers",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "script": "scripts/cleanup-ova.sh"
    }
  ]
}